@*@model Dm.Common.Models.UserLogin*@
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">*@
<style>
    .signup {
        background-color: transparent;
        color: white;
        border: none;
        float: right;
        padding-top: 14.5px;
        padding-bottom: 14.5px;
    }

    .btn-primary:hover, .btn-primary:focus, .btn-primary.focus, .btn-primary:active, .btn-primary.active, .open > .dropdown-toggle.btn-primary {
        color: #ffffff;
        background-color: #4e9f15;
        border-color: #1862b5;
    }
</style>
<div class="one">
    @{
        var UserName = @HttpContextAccessor.HttpContext.Session.GetString("UserName");
        if (UserName != null)
        {
            <div class="dropdown navbar-right">
                <button class="dropbtn"><img src="~/images/User.png" style="height: 18px;width: 20px;">&nbsp; @UserName</button>
                <div class="dropdown-content">
                    <div class="dropdown-divider"></div>
                    <a asp-action="Logout">Sign Out</a>

                </div>
            </div>
        }
    }
</div>

@{
    var RoleID = @HttpContextAccessor.HttpContext.Session.GetString("roleId");
    if (RoleID != "2")
    {
        <div style="margin-right:80px"> <a asp-action="Registration"><button class="btn btn-primary signup">SignUp/નવા સભ્ય ઉમેરો</button></a></div>
    }
}