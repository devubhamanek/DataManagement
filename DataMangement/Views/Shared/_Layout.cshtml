@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Data Management</title>
    <link href="~/css/bootstrap.css" rel="stylesheet">
    <link href="~/css/Site.css" rel="stylesheet">

    <!--Test-->
    <!--End-->
    <style type="text/css">

        .container-fluid {
            padding-left: 0px;
        }

        .dropbtn {
            background-color: transparent !important;
            color: white;
            padding-top: 14.5px;
            padding-bottom: 13.5px;
            font-size: 16px;
            border: none;
            padding-left: 20px;
            padding-right: 20px;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            /*z-index: 1;
            margin-left: -74px;*/
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

        .dropdown-divider {
            border: 0.25px solid darkgray;
        }

        .dropdown-content a:hover {
            background-color: #ddd;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown:hover .dropbtn {
            background-color: #4e9f15 !important;
        }
    </style>
</head>
<body>

    <div class="container">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation" style="background:#ff7518;">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <img src="~/Images/logo.png" height="42px" style="padding-top:5px" />
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                        <li><a asp-controller="Home" asp-action="Category3" asp-route-InOut="InWard">InWard</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Category3" asp-route-InOut="OutWard">OutWard</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="UserList">Document</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="login">BJP</a></li>


                        <li>
                            <div class="dropdown">
                                <button class="dropbtn">Master</button>
                                <div class="dropdown-content">
                                    <a asp-action="MasterCategory">MasterCategory</a>

                                    <a asp-action="Category">Category</a>
                                    @*<div class="dropdown-divider"></div>*@
                                    <a asp-action="Category1">Category 1</a>

                                    <a asp-action="Category2">Category 2</a>

                                    <a asp-action="Category3">Category 3</a>

                                </div>
                            </div>
                </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
    </div>
    </nav>
    <div class="row">


        <div class="col-md-12 " id="divRenderBody">
            @RenderBody()
        </div>

    </div>
    </div>


    <footer style=" padding:10px 15px 4px; background:#FF7518; color:white;">
        <div class="row">
            <div class="col-lg-10"><p>&copy; @DateTime.Now.Year - Data Management</p> </div>

            <div class="col-lg-2"><p>Developed By: <a href="http://www.manektech.com/" target="_blank" style="color:white;">ManekTech</a></p></div>
        </div>



    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
